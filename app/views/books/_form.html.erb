<%= form_for(@book, local: true) do |form| %>
<%= render 'shared/errors', instance: @book %>

<div class="field">
  <%= form.label :title %>
  <%= form.text_field :title %>
</div>

<div class="field">
  <%= form.select :author_id,
    options_from_collection_for_select(@authors, :id, :name), :prompt => "Select Author"
    %>
</div>

<div class="field">
  <%= form.label :description %>
  <%= form.text_field :description %>
</div>

<div class="actions">
  <%= form.submit %>
</div>
<% end %>